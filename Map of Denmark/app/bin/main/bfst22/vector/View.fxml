<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import bfst22.vector.MapCanvas?>
<?import javafx.scene.Scene?>
<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst22.vector.Controller"
       fx:id="scene"
>
    <root>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" minHeight="1000.0" minWidth="1000">
    <top>
        <ButtonBar prefHeight="5.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <buttons>
                <MenuButton mnemonicParsing="false" prefHeight="25.0" text="Menu">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Action 1" />
                        <MenuItem mnemonicParsing="false" text="Action 2" />
                    </items>
                </MenuButton>
                <TextField prefHeight="25.0" text="Search">
                    <padding>
                        <Insets right="40.0" />
                    </padding>
                </TextField>
                <Button minWidth="62.0" mnemonicParsing="false" prefHeight="25.0" text="-" />
                <Slider />
                <Button minWidth="66.0" mnemonicParsing="false" prefHeight="25.0" text="+" />
            </buttons>
        </ButtonBar><ButtonBar prefHeight="5.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <buttons>
            <MenuButton mnemonicParsing="false" prefHeight="25.0" text="Menu">
                <items>
                    <MenuItem mnemonicParsing="false" text="Action 1" />
                    <MenuItem mnemonicParsing="false" text="Action 2" />
                </items>
            </MenuButton>
            <TextField prefHeight="25.0" text="Search">
                <padding>
                    <Insets right="40.0" />
                </padding>
            </TextField>
            <Button minWidth="62.0" mnemonicParsing="false" prefHeight="25.0" text="-" />
            <Slider />
            <Button minWidth="66.0" mnemonicParsing="false" prefHeight="25.0" text="+" />
        </buttons>
    </ButtonBar>
    </top>
    <center>
        <MapCanvas fx:id="canvas"
                   width="${scene.width}"
                   height="${scene.height}"
                   onScroll="#onScroll"
                   onMousePressed="#onMousePressed"
                   onMouseDragged="#onMouseDragged"
        />
    </center>
</BorderPane>
    </root>
</Scene>