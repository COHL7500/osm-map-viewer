<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import bfst22.vector.MapCanvas?>
<?import javafx.scene.Scene?>
<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst22.vector.Controller"
       fx:id="scene"
>
<root>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"  >

    <top>
        <HBox spacing="10" minWidth="325.0" alignment="CENTER">
            <padding>
                <Insets top="5" bottom="5" left="10" right="10"/>
            </padding>

            <MenuButton fx:id="dropdown" minWidth="75.0" mnemonicParsing="false" prefHeight="25.0" HBox.hgrow="SOMETIMES" text="Menu"/>

            <TextField minWidth="100.0" prefHeight="25.0" HBox.hgrow="ALWAYS" text="Search">
                <padding>
                    <Insets right="40.0" />
                </padding>
            </TextField>

            <Button minWidth="25.0" mnemonicParsing="false" prefHeight="25.0" HBox.hgrow="SOMETIMES" text="-" />
            <Slider fx:id="slider" minWidth="100.0" />

            <Button minWidth="25.0" mnemonicParsing="false" prefHeight="25.0" HBox.hgrow="SOMETIMES" text="+" />
        </HBox>
    </top>

    <center>
        <MapCanvas fx:id="canvas"
                   width="${scene.width}"
                   height="${scene.height}"
                   onScroll="#onScroll"
                   onMousePressed="#onMousePressed"
                   onMouseDragged="#onMouseDragged"
        />
    </center>

</BorderPane>
</root>

</Scene>